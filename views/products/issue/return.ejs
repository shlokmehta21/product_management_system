<%- include('../../partials/nav') %>
<link rel="stylesheet" href="/public/css/issue.css" />
<%- include('../../partials/topnav') %>
<%- include('../../partials/messages') %>
<div class="content">
<div class="containerforissue">
    <div class="row p-4">
      <div class="col-md-10">
        <form action="" method="POST" class="shadow-lg p-3 mb-5 rounded center">
          <h1>Return Product</h1>
          <div class="form-group">
            <label for="remarks">Remarks Description</label>
            <textarea type="text" class="form-control" name="remarks" id="remarks" rows="3"
              placeholder="Remarks Description" required></textarea>
          </div>

          <div class="form-group">
            <label for="qty">Return Quantity</label>
              <input type="number" class="form-control" name="qty" id="qty" placeholder="Enter Quantity" required />   
          </div>

          <div class="form-group" hidden>
            <label for="issueid">Issue ID</label>
            <input type="text" class="form-control" name="issueid" id="issue_id" value="<%= issue._id %> " required />
          </div>

      </div>
    </div>
  </div>


  <div class="containerforcreate" >
    <div class="row p-4">
      <div class="col-md-10 shadow-lg p-3 mb-5 rounded center" >
        <strong>ISSUE SUMMARY</strong>
          <div class="form-group">
            <label for="issuetime">Issue Time</label>
            <input type="text" class="form-control" name="issuetime" id="issuetime" value="<%= issue.issueTime %> " required />
          </div>

          <div class="form-group">
            <label for="title">Employee Name</label>
            <input type="text" class="form-control" name="ename" id="ename" value="<%= issue.employee.ename%>" required />
          </div>

          <div class="form-group">
            <label for="enumber">Employee Number</label>
            <input type="text" class="form-control" name="enumber" id="enumber"
              value="<%= issue.employee.enumber %>" required />
          </div>

          <div class="form-group">
            <label for="cnumber">Contact Number</label>
            <input type="text" class="form-control" name="cnumber" id="cnumber"
              value="<%= issue.employee.cnumber %>" required />
          </div>

          <div class="form-group">
            <label for="prodid">Product ID</label>
            <input type="text" class="form-control" name="prodid" id="prodid" value="<%= issue.product.prodid %> " required />
          </div>

          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" id="title" value="<%= issue.product.title %>" required />
          </div>

          <div class="form-group">
            <label for="manufacturer">manufacturer</label>
            <input type="text" class="form-control" name="manufacturer" id="manufacturer"
              value="<%= issue.product.manufacturer %>" required />
          </div>

          <div class="form-group">
            <label for="manufacturer">manufacturer</label>
            <input type="text" class="form-control" name="manufacturer" id="manufacturer"
              value="<%= issue.product.manufacturer %>" required />
          </div>

          <div class="form-group">
            <label for="Description"> Category</label>
            <input type="text" class="form-control" name="Category" id="Category" rows="3" value="<%= issue.product.category.title %>"></input> 
          </div>

          <div class="form-group">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="gridCheck" />
              <label class="form-check-label" for="gridCheck"> Confirm </label>
            </div>
          </div>
          <!-- Delete btn -->
          <form id="deletebtn" action="/products/issue/<%= issue._id%>?_method=DELETE" method="POST">
          <button class="btn btn-outline-success btn-lg" type="submit">SAVE</button>
          </form>
          <!--  -->
        </form>
      </div>
    </div>
  </div>
</div>
