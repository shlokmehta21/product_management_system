<%- include('../../partials/nav') %>
<link rel="stylesheet" href="/public/css/category.css">

<%- include('../../partials/topnav') %>
<%- include('../../partials/messages') %>

<div class="content">
<div class="createcate">

<div class="container">

  <h3 class="p-3 text-dark text-center shadow-sm p-3 mb-5 rounded center">All Categories </h3>

  <div class="panel panel-default">
    <table class="table shadow-lg p-3 mb-5 rounded center">
      <thead class="bg-dark text-center">
        <tr class="text-white">
          <th>Category Title</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody class="text-center">
        <% if (catogories.length> 0) { %> <% catogories.forEach(category => { %>
        <tr>
          <td><%= category.title %></td>
          <td class="d-flex justify-content-center">
            <a id="editpage" href="/products/category/<%= category._id%>/edit" class="btn btn-sm btn-outline-primary mr-2">Edit</a>

            <% var role = user.role %>
            <% if(role === 'user') {  %>
            <% } else { %>
              <form id="deletebtn" action="/products/category/<%= category._id%>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
            <% } %>
          </td>
        </tr>
        <% }) %> <% } else { %>
        <p>There are no Products to display...</p>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<hr>

    <div class="row p-4">
        <div class="col-md-8">
            <form action="" method="post">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="category-title" name="title" placeholder="Enter Title" required>
                </div>
                    <button class="btn btn-outline-success btn-lg" id="create-category-button">Create Category</button>
            </form>
        </div>
    </div>
</div>
</div>
