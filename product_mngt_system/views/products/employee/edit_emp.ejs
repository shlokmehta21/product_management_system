<%- include('../../partials/nav') %>
<link rel="stylesheet" href="/public/css/issue.css" />
<%- include('../../partials/topnav') %>
<%- include('../../partials/messages') %>
<div class="content">
  <div class="containerforissue">
    <h3 class="p-3 text-dark text-center shadow-sm p-3 mb-5 rounded center">Update Employee</h3>
 
<form action="/products/employee/<%= employee._id %>/?_method=PUT"" method="POST" class="shadow-lg p-3 mb-5 rounded center">
  <h1>Create new Employee</h1>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="ename">Employee Name</label>
      <input type="text" class="form-control" name="ename" id="ename" value=<%= employee.ename  %>  required />
    </div>
    <div class="form-group col-md-6">
      <label for="email">Email</label>
      <input type="email" class="form-control" name="email" id="email" value=<%= employee.email  %>  required/>
    </div>
    <div class="form-group col-md-6">
      <label for="enumber"><strong>Employee Number</strong></label>
      <input type="text" class="form-control" name="enumber" id="enumber" value=<%= employee.enumber  %> required />
    </div>
    <div class="form-group col-md-6">
      <label for="cnumber">Contact Number</label>
      <input type="text" class="form-control" name="cnumber" id="cnumber" value=<%= employee.cnumber  %> required />
    </div>

    <div class="form-group col-md-6">
      <label for="disig">Designation</label>
      <input type="text" class="form-control" name="desig" id="desig" value=<%= employee.desig  %> required/>
    </div>

    <div class="form-group col-md-6">
      <label for="department">Department</label>
      <input type="text" class="form-control" name="department" id="department" value=<%= employee.department  %> required/>
    </div>
  </div>
  <button class="btn btn-outline-success btn-lg" type="submit">
      SAVE
    </button>
</form>
</div>
</div>